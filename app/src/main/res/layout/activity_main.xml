<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background4"
    android:id="@+id/activity_id">

    <TextView
        android:id="@+id/tvMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:fontFamily="@font/agus_sans"/>

    <EditText
        android:id="@+id/etHow"
        android:background="@drawable/et_selector"
        android:inputType="textAutoCorrect"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="@string/question"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:layout_below="@+id/tvMood"
        android:textColorHint="@color/white"
        android:textColor="@drawable/et_color_selector"
        android:textCursorDrawable="@color/gray"
        android:imeOptions="actionSearch"
        android:maxLines="1"/>

    <CheckBox
        android:id="@+id/cbMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etHow"
        android:text="@string/movies"
        android:layout_marginLeft="95dp"
        android:buttonTint="@color/white"
        android:textColor="@color/white"/>

    <CheckBox
        android:id="@+id/cbTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cbMovies"
        android:text="@string/tv"
        android:layout_below="@id/etHow"
        android:buttonTint="@color/white"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnFavorites"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_shape_default"
        android:text="@string/favorites"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cbMovies"
        android:textColor="@color/black" />

</RelativeLayout>